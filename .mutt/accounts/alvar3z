  set from      = "eax@alvar3z.com"
  set sendmail  = "/usr/local/bin/msmtp -a alvar3z"
  set mbox      = "+alvar3z/all_mail"
  unset record
  set postponed = "+alvar3z/drafts"
  set signature = ~/.mutt/accounts/alvar3z_sig
  set pgp_sign_as= ~/.secrets.yml

color status green default

